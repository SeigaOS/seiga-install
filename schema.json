{
  "groups": [
    {
      "title": "Keyboard Configuration",
      "description": "Configure the keyboard layout to use.",
      "reference": "https://wiki.archlinux.org/title/Linux_console/Keyboard_configuration",
      "name": "keyboard",
      "inputs": [
        {
          "title": "Keymap",
          "name": "keymap",
          "description": "Select the keymap to use.",
          "type": "select",
          "choicesFunction": "getKeymaps",
          "value": "us"
        }
      ]
    },
    {
      "title": "Timezone Configuration",
      "description": "Configure the timezone to use.",
      "reference": "https://wiki.archlinux.org/title/System_time",
      "name": "timezone",
      "inputs": [
        {
          "title": "Timezone",
          "name": "timezone",
          "description": "Select the timezone to use.",
          "type": "select",
          "choicesFunction": "getTimezones",
          "value": "UTC"
        },
        {
          "title": "Subzone",
          "name": "subzone",
          "description": "Select the subzone to use.",
          "type": "select",
          "choicesFunction": "getSubzones",
          "value": "UTC"
        }
      ]
    }
  ]
}
